        Book n Eat
    </title>

    <style></style>
</head>
<body>
    <%- include('adminHeader') -%>



<!-- homepage -->


<div class="row">
    <div class="page text-center bg-light">
                <h1>DASHBOARD</h1>
                <a href ="/managerList" class ="btn btn-danger btn-sm remove">Manager List</a>


    </div>
    <div class="reservation-status">
    <div class="page text-center bg-light">
            <h2> Accounts List </h2>
              <table class="account" id="account">
                <thead>
                  <tr>
                      <th>Name</th>
                      <th>Username</th>
                      <th>Email</th>
                      <th>Phone</th>
                      <th>Role</th>
                      <th>Edit Account</th>
                      <th>Delete Account</th>
                  </tr>
              </thead>
              <tbody>
                <% accounts.forEach(function(accounts){ %>
                  <tr>
                    <!-- <td><input type="text" name = "name" id = "name"value = <%= accounts.name%> ></td> -->
                    <td><%= accounts.name%></td>
                    <td><%= accounts.username%></td>
                    <td><%= accounts.email%></td>
                    <td><%= accounts.phone%></td>
                    <form action="/edit" method="post">
                      <input type="hidden" name = "username" id = "username" value = <%= accounts.username%> >
                    <td><select name ="role" id="role" >
                      <!-- if value == "Manager"-->
                      <option disabled selected hidden name = "role" id = "role" value = <%= accounts.role%> ><%= accounts.role%></option>
                      <option value = "User">User</option>
                      <option value = "Manager">Manager</option>
                      <option value = "Admin">Admin</option>
                      </select></td>
                      <td><button type ="submit" class ="btn btn-danger btn-sm remove">Update</button></td>
                    </form>
                    <form action="/delete" method="post">
                      <input type="hidden" name = "username" id = "username" value = <%= accounts.username%> >
                      <td><button type ="submit" class ="btn btn-danger btn-sm remove">Delete</button></td>
                    </form>
                </tr>
                  <% }); %>
                  

                </tbody>
              </table>

              </div>
          
    </div>
    
      
</div>
</div>
</div>



<!-- footer-->
<%- include('footer') -%>

<!-- End of .container -->
<!-- Scripts -->
</body>
</html
