<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="images/book-n-eat-logo.jpg">

    <link rel = "stylesheet" href="css/mco.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>
      <%= title %>
      <%= branch %>
    </title>

    <style></style>
</head>
<body>
    <%- include('partials/managerHeader') -%>


    
    <div class="row">
        <div class="page text-center bg-light">
                    <h1>DASHBOARD</h1>
                    <%  if(title == "No Restaurant Assigned"){%>   
                      <h1> No Restaurant Assigned!!!</h1>
                      <% }else{%>
        </div>
        <div class="reservation-status">
        <div class="page text-center bg-light">
                <h2> Reservations List </h2>
                <h1> </h1>
                  <table class="account" id="account">
                    <thead>
                      <tr>
                          <th>Customer Name</th>
                          <th>Email</th>
                          <th>Phone no.</th>
                          <th>Restaurant Name</th>
                          <th>Branch</th>
                          <th>Date of Reservation</th>
                          <th>Time of Reservation</th>
                          <th>Number of People</th>
                          <th>Status</th>
                          <th>Update Status</th>
                          <th>Delete Reservation</th>



                      </tr>
                  </thead>
                  <tbody>
                    <% reservations.forEach(function(reservations){ %>
                        <tr>
                            <td><%= reservations.name%></td>
                            <td><%= reservations.email%></td>
                            <td><%= reservations.phone%></td>
                            <td><%= reservations.restaurant%></td>
                            <td><%= reservations.branch%></td>
                            <td><%= reservations.datein%></td>
                            <td><%= reservations.timein%></td>
                            <td><%= reservations.numpeople%></td>
                            <form action="/updatestatus" method="post">
                                <input type="hidden" name = "resID" id = "resID" value = <%= reservations.resID%> >
                                <td><select name = "status" id = "status" >
                                    <!-- if value == "Manager"-->
                                    <option disabled selected hidden  value = <%= reservations.status%> ><%= reservations.status%></option>
                                    <option value = "Pending">Pending</option>
                                    <option value = "Approved">Approved</option>
                                    <option value = "Rejected">Rejected</option>
                                    <option value = "Complete">Complete</option>
                                    </select></td>
                                    <td><button type ="submit" class ="btn btn-danger btn-sm remove">Update</button></td>
                            </form>
                            <form action="/deleteres" method="post">
                                <input type="hidden" name = "resID" id = "resID" value = <%= reservations.resID%> >
                                <td><button type ="submit" class ="btn btn-danger btn-sm remove">Delete</button></td>
                              </form> 
                    </tr>
                      <% }); %>
                    </tbody>
                  </table>
                  </div>     
        </div>
        <%   } %>        
    </div>
<!-- footer-->
<!-- End of .container -->
<!-- Scripts -->
</body>
</html>
